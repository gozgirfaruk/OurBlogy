@model Blogy.EntityLayer.Concrete.Article
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}




<!doctype html>
<html lang="en">

<body>

    @await Component.InvokeAsync("_BlogDetailByCoverInfoPartialComponent")

    <section class="section">
        <div class="container">

            <div class="row blog-entries element-animate">
                <div class="col-md-12 col-lg-8 main-content">

                    <div class="post-content-body">


                        <div class="row my-4">
                            <div class="col-md-12 mb-4">
                                 <img src="@Html.DisplayFor(x=>x.CoverImageUrl)" alt="Image placeholder" class="img-fluid rounded">
                            </div>

                        </div>
                         <p>@Html.DisplayFor(x=>x.Description)</p>

                    </div>

                    @await Component.InvokeAsync("_BlogDetailCommentPartialComponent")
                    
                </div>
                @await Component.InvokeAsync("_BlogRigtSideWriterPartialComponent") 
            </div>
    </section>
</body>
</html>

