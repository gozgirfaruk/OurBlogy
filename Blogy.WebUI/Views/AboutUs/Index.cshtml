@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="section">
	<div class="container">
		@foreach(var item in Model)
		{
			<div class="row justify-content-between">
			<div class="col-lg-7 mb-4 mb-lg-0">
				<img src="@item.ImageUrl" alt="Image" class="img-fluid rounded
					">
			</div>
			<div class="col-lg-4 ps-lg-2">
				<div class="mb-5">
					<h2 class="text-black h4">@item.Title</h2>
					<p>@item.Description</p>
				</div>
				<div class="d-flex mb-3 service-alt">
					<div>
						<span class="bi-wallet-fill me-4"></span>
					</div>
					<div>
						<h3>Kendi Blogunu Oluşturma</h3>
						<p>Sizler de yazarlarımız arasında yer alarak bloglar hazırlayabilir, bloglarınızın herkes tarafından erişilebilir olmasını sağlayabilirsiniz.</p>
					</div>
				</div>

				<div class="d-flex mb-3 service-alt">
					<div>
						<span class="bi-pie-chart-fill me-4"></span>
					</div>
					<div>
						<h3>Popüler Bloglar</h3>
						<p>Bloglarınızın daha çok kişi tarafından görülmesini istiyorsanız, yorumlar alın ve bloglarınızı düzenli olarak güncelleyin.</p>
					</div>
				</div>

				<div class="d-flex mb-3 service-alt">
					<div>
						<span class="bi-bag-check-fill me-4"></span>
					</div>
					<div>
						<h3>Size Özel Bloglar</h3>
						<p>İlgi alanınızdaki blogları takip edin ve diğer yazarların neler yazdıklarını kaçırmayın.</p>
					</div>
				</div>

			</div>

		</div>
		}
		
	</div>
</div>

