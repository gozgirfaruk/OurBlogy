@model List<Comment>

<div class="pt-5 comment-wrap">
    <h3 class="mb-5 heading">@Model.Count Yorum</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            <li class="comment">
                <div class="vcard">
                    <img src="https://img.freepik.com/free-vector/user-circles-set_78370-4704.jpg?t=st=1714322738~exp=1714326338~hmac=dde063b26a2f841cfae1e38794e7c6fbb76d703ff36fe63b0e50b4a44777d611&w=826" alt="Image placeholder">
                </div>
                <div class="comment-body">
                    <h3>@item.NameSurname</h3>
                    <div class="meta">@item.CommentDate.ToString("dd.MM.yyyy")</div>
                    <p>@item.Subject</p>
                    <p><a href="#" class="reply rounded">Yanıtla</a></p>
                </div>
            </li>
          
        }
        
    </ul>
    


</div>