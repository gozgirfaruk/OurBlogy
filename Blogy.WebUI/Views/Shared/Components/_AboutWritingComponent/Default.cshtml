@model List<About>
<br />
@foreach(var item in Model)
{
	<div class="section sec-halfs py-0">
	<div class="container">
		<div class="half-content d-lg-flex align-items-stretch">
			<div class="img" style="background-image: url(@item.ImageUrl)" data-aos="fade-in" data-aos-delay="100">
			</div>
			<div class="text">
				<h2 class="heading text-primary mb-3">@item.Title</h2>
				<p class="mb-4">@item.Description.</p>
					<p><a href="/AboutUs/Index" class="btn btn-outline-primary py-2">Daha Fazla...</a></p>
			</div>
		</div>
	</div>
</div>
}
<br /><br />
