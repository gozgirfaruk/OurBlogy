@model Address


<div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
	<div class="contact-info">

		<div class="address mt-4">
			<i class="icon-room"></i>
			<h4 class="mb-2">Lokasyon</h4>
			<p>@Html.DisplayFor(x=>x.Location)<br> Türkiye TR</p>
		</div>
		<div class="open-hours mt-4">
			<i class="icon-clock-o"></i>
			<h4 class="mb-2">Çalışma Saatlerimiz</h4>
			<p>
				Haftaiçi Hergün:<br>
				@Html.DisplayFor(x=>x.OpenHour)
			</p>
		</div>

		<div class="email mt-4">
			<i class="icon-envelope"></i>
			<h4 class="mb-2">e-Mail</h4>
			<p>@Html.DisplayFor(x=>x.Email)</p>
		</div>

		<div class="phone mt-4">
			<i class="icon-phone"></i>
			<h4 class="mb-2">Telefon</h4>
			<p>+90 @Html.DisplayFor(x=>x.Phone)</p>
		</div>

	</div>
</div>