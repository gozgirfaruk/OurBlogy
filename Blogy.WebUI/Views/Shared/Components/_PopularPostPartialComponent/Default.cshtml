@model List<Article>
<!doctype html>
<html lang="en">

<body>


    <div class="col-md-6 col-lg-6 sidebar">

        <!-- END sidebar-box -->
        <!-- END sidebar-box -->
        <div class="sidebar-box">
            <h3 class="heading">Yazara Ait Popüler Bloglar</h3>
            <div class="post-entry-sidebar">
                <ul>
                    @foreach(var item in Model)
                    {
                        <li>
                        <a href="">
                            <img src="@item.ImageUrlB" alt="Image placeholder" class="me-4 rounded">
                            <div class="text">
                                <h4>@item.Title</h4>
                                <div class="post-meta">
                                    <span class="mr-2">@item.CreatedDate.ToShortDateString() </span>
                                </div>
                            </div>
                        </a>
                    </li>
                    }
                    
                </ul>
            </div>
        </div>

    </div>
    <!-- END sidebar -->

</body>
</html>
