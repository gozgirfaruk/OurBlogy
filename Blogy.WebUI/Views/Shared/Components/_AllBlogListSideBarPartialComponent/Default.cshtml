@model List<Article>

<div class="sidebar-box">
	<h3 class="heading">Okumaya Doyamadıklarımız</h3>
	<div class="post-entry-sidebar">
		<ul>
			@foreach(var item in Model)
			{
				<li>
				<a href="/Blog/BlogDetail/@item.ArticleID">
					<img src="@item.ImageUrlB" alt="Image placeholder" class="me-4 rounded">
					<div class="text">
						<h4>@item.Title</h4>
						<div class="post-meta">
							<span class="mr-2">@item.CreatedDate.ToString("dd MMMM yyyy") </span>
						</div>
					</div>
				</a>
			</li>
			}
			
			
			
		</ul>
	</div>
</div>