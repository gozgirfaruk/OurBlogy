@model List<Blogy.EntityLayer.Concrete.Writer>
@{
    ViewData["Title"] = "WriterList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazarlar Paneli</h4>
            <p class="card-description">
                Tablo <code>.Yazar Listesi</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Kullanıcı</th>
                            <th>İsmi</th>
                            <th>Hakkında</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                            <td class="py-1">
                                <img src="@item.ImageUrl" alt="image" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                                @if (item.Status == true)
                                {
                                    <td><a href="/Admin/Default/StatusChanger/@item.WriterID" class="btn btn-outline-success bnt-rounded">Aktif</a></td>
                                }
                                else{
                                    <td><a href="/Admin/Default/StatusChanger/@item.WriterID" class="btn btn-outline-danger">Pasif</a></td>
                                }
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

