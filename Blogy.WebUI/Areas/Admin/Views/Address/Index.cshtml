@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
       
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Adres Bilgilerim</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Aktif Adresim </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Listesi</h4>
                    <p class="card-description">
                      Adres bilgilerini görüntüleyebilir veya güncelleyebilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Mail</th>
                                    <th>Telefon</th>
                                    <th>Çalışma Saatleri</th>
                                    <th>İkamet</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AddressID</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.OpenHour</td>
                                        <td>@item.Location</td>
                                        <td><a href="/Admin/Address/Update/@item.AddressID" class="btn btn-outline-danger btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

