@model List<Blogy.EntityLayer.Concrete.Article>
@{
    ViewData["Title"] = "MyBlogList";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Size Ait Bloglar</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Bloglar</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Yazar Blogları </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Listesi</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan size ait blogları görüntüleyebilir, üzerlerinde işlem yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Blog Başlığı.</th>
                                    <th>Tarih</th>
                                    <th>Kategori</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Blog Yorumları</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@item.ArticleID</td>
                                        <td>@item.Title</td>
                                        <td>@item.CreatedDate.ToString("dd MMMM yyyy")</td>
                                        <td>@item.CategoryID</td>
                                        <td><a href="/Writer/Blog/DeleteBlog/@item.ArticleID" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                        <td><a href="#" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                        <td><a href="#" class="btn btn-outline-warning btn-rounded">Yorumlar</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <a href="#" class="btn btn-outline-primary btn-rounded">Yeni Blog Girişi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>