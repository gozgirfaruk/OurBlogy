@model Article
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Yeni Blog Ekleme Sayfası</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Blog İşlemleri</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Blog Güncelleme </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Güncelleme</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak blog güncelleme işlemini tamamlayabilirsiniz.
                    </p>
                    <form method="post">
                        <label>Blog Başlığı</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />
                        <label>Blog Kategori</label>
                   @Html.DropDownListFor(x=>x.ArticleID, (List<SelectListItem>)ViewBag.v, new {@class="form-control"})
                        <br />
                        <label>Blog Kapak Fotoğraf Yolu</label>
                        <input type="text" asp-for="CoverImageUrl" class="form-control" />
                        <br />
                        <label>Blog Yardımcı Fotograf</label>
                        <input type="text" asp-for="ImageUrlA" class="form-control" />
                        <br />
                        <label>Blog Yardımcı Fotograf</label>
                        <input type="text" asp-for="ImageUrlB" class="form-control" />
                        <br />
                        <label>Blog Hakkında </label>
                        <textarea rows="15" class="form-control" asp-for="Explanation"></textarea>
                        <br />
                        <label>Blog Detayları</label>
                        <textarea rows="15" class="form-control" asp-for="Description"></textarea>
                        <br />
                        <button class="btn btn-outline-info btn-rounded">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>